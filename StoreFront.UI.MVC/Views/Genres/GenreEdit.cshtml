@model StoreFront.DATA.EF.Genre

@using (Html.BeginForm("AjaxEdit", "Genres", FormMethod.Post, new { id = "GenreEditForm" }))
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            @Html.HiddenFor(model => model.GenreID)
            <td>
                @Html.EditorFor(model => model.GenreName, new { htmlAttributes = new { @class = "form-control", style = "width:680px; margin-left:-10px; margin-right:10px;" } })
                @Html.ValidationMessageFor(model => model.GenreName, "", new { @class = "text-danger" })
            </td>
            <td>
                <input type="button" id="saveUpdate" value="Update Genre" class="btn btn-danger" />
            </td>
        </tr>
    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
