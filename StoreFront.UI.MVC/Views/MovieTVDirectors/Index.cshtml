@model IEnumerable<StoreFront.DATA.EF.MovieTVDirector>

@{
    ViewBag.Title = "Movie/TV Director Index";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Movies/TV", "Index", "MoviesTV")</li>
                    <li>@Html.ActionLink("Directors", "Index", "Directors")</li>
                    <li class="active">@ViewBag.Title</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<div class="section">
    <div class="container">
        <h2 class="text-center">@ViewBag.Title</h2>

        <p class="row">
            @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-danger text-right pull-left" })
        </p>
        <table class="table data-table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MoviesTV.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Director.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DirectorOrder)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "MoviesTV", new { id = item.MovieTVID })"><strong>@item.MoviesTV.Title</strong></a>
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Directors", new { id = item.DirectorID })"><strong>@item.Director.FullName</strong></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DirectorOrder)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.MovieTVDirectorID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.MovieTVDirectorID })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $(".data-table").DataTable({
                "order": [[0, "asc"]]
            });
        });
    </script>
}