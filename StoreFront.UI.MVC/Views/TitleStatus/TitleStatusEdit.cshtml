@model StoreFront.DATA.EF.TitleStatus

@using (Html.BeginForm("AjaxEdit", "TitleStatuses", FormMethod.Post, new { id = "TitleStatusEditForm" }))
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            @Html.HiddenFor(model => model.TitleStatusID)
            <td>
                @Html.EditorFor(model => model.TitleStatusName, new { htmlAttributes = new { @class = "form-control", style = "width:135px; margin-left:-10px; margin-right:10px;" } })
                @Html.ValidationMessageFor(model => model.TitleStatusName, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control", style = "width:750px; margin-right:10px;" } })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </td>
            <td>
                <input type="button" id="saveUpdate" value="Update Title Status" class="btn btn-danger" />
            </td>
        </tr>
    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
