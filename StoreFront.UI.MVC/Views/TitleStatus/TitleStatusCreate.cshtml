@model StoreFront.DATA.EF.TitleStatus

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "TitleStatusCreateForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-3">
                @Html.EditorFor(model => model.TitleStatusName, new { htmlAttributes = new { @class = "form-control", placeholder = "Title Status" } })
                @Html.ValidationMessageFor(model => model.TitleStatusName, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6">
                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control", placeholder = "Notes" } })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-1">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
